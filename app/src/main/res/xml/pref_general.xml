<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Account"
        android:key="pref_key_account_settings">

        <EditTextPreference
            android:inputType="textPassword"
            android:title="Change Password"
            android:maxLines="1"
            android:singleLine="true"
            android:key="key_password"
            android:defaultValue="blablabla"/>

        <SwitchPreference
            android:key="key_fb_share"
            android:defaultValue="true"
            android:title="Facebook Share"/>

        <SwitchPreference
            android:key="key_twitter_share"
            android:defaultValue="true"
            android:title="Twitter Share"/>

        <SwitchPreference
            android:key="key_google_share"
            android:defaultValue="true"
            android:title="G+ Share"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Profile"
        android:key="pref_key_profile_settings">

        <SwitchPreference
            android:key="key_private_profile"
            android:defaultValue="true"
            android:title="Private Profile"/>

        <SwitchPreference
            android:key="key_promo_notification"
            android:defaultValue="true"
            android:title="Promo Notification"/>

        <SwitchPreference
            android:key="key_message_notification"
            android:defaultValue="true"
            android:title="Message Notification"/>

        <SwitchPreference
            android:key="key_follower_notification"
            android:defaultValue="true"
            android:title="New Follower Notification"/>

    </PreferenceCategory>

