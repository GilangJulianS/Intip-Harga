<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="200dp">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/kursus_masak"/>

    <View
        android:id="@+id/center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/center"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#DDCF5B"
            android:textSize="22sp"
            android:text="Kursus Masak?"/>

        <TextView
            android:id="@+id/txt_secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Lihat jadwal yang sesuai"/>

        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:textColor="#fff"
            android:textSize="10sp"
            android:text="Klik di sini"
            android:background="@drawable/btn_orange_dark"/>

    </LinearLayout>


</RelativeLayout>
